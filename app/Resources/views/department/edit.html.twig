{% extends 'layouts/main.html.twig' %}

{% block content %}
    <h1 class="page-header">Editar departamento: <small style="display: inline">{{ department.name }}</small> </h1>

    <div class="row">
        {{ form_start(edit_form) }}
        <div class="col-md-3">
            <div class="form-group">
                {{ form_widget(edit_form) }}
            </div>
            <input type="submit" value="Editar"  class="btn btn-warning"/>
            <a href="{{ path('department_index') }}" class="btn btn-default">Regresar al listado</a>
        </div>
        {{ form_end(edit_form) }}
    </div>


{% endblock %}
