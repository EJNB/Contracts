{% extends 'layouts/main.html.twig' %}

{% block content %}
    <h1 class="page-header">Editar suplemento: <small>{{ supplement.consecutiveNumber }} </small></h1>

    <div class="container-fluid">
        <div class="row">
            {{ form_start(edit_form) }}

            <div class="col-md-5">
                <div class="form-horizontal">

                    <!--contract field-->
                    <div class="form-group">
                        {{ form_label(edit_form.contract,'Contrato', { 'label_attr':{ 'class':'col-sm-5 control-label' } }) }}
                        <div class="col-sm-7">
                            {{ form_errors(edit_form.contract) }}
                            {{ form_widget(edit_form.contract) }}
                        </div>
                    </div>

                    <!--consecutive field-->
                    <div class="form-group">
                        {{ form_label(edit_form.consecutiveNumber,'No. Consecutivo', { 'label_attr':{ 'class':'col-sm-5 control-label' } }) }}
                        <div class="col-sm-7">
                            {{ form_errors(edit_form.consecutiveNumber) }}
                            {{ form_widget(edit_form.consecutiveNumber) }}
                        </div>
                    </div>

                    <!-- field-->
                    <div class="form-group">
                        {{ form_label(edit_form.contractualObject,'Objeto contractual', { 'label_attr':{ 'class':'col-sm-5 control-label' } }) }}
                        <div class="col-sm-7">
                            {{ form_errors(edit_form.contractualObject) }}
                            {{ form_widget(edit_form.contractualObject) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.cucValue,'Valor en cuc:', { 'label_attr':{ 'class':'col-sm-5 control-label' } }) }}
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                {{ form_widget(edit_form.cucValue) }}
                                {{ form_errors(edit_form.cucValue) }}
                                <span class="input-group-addon">.00</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.cupValue,'Valor en cup:', { 'label_attr':{ 'class':'col-sm-5 control-label' } }) }}
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                {{ form_widget(edit_form.cupValue) }}
                                {{ form_errors(edit_form.cupValue) }}
                                <span class="input-group-addon">.00</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-5 control-label"></label>
                        <div class="col-sm-7">
                            <button class="btn btn-primary" type="submit">Editar</button>
                            <a href="{{ path('supplement_index') }}" class="btn btn-default">Regresar al listado</a>
                        </div>
                    </div>
                </div><!--/. form-horizontal-->
            </div><!--End .col-md-5-->
            {{ form_end(edit_form) }}
        </div>
    </div><!--end .container-fluid-->

{% endblock %}
