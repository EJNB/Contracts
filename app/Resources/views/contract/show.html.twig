{% extends 'layouts/main.html.twig' %}

{% block content %}

    <div class="container-fluid">
        <h1 class="page-header">Contrato <small style="display: inline">{{ contract.id }}</small></h1>

        <table class="table table-responsive table-hover">
            <tbody>
                <tr>
                    <th style="width:30%">No. contrato</th>
                    <td>{{ contract.contractNumber }}</td>
                </tr>
                <tr>
                    <th style="width:30%">No. consecutivo</th>
                    <td>{{ contract.id }}</td>
                </tr>
                <tr>
                    <th style="width:30%">Proveedor</th>
                    <td>{{ contract.suplier }}</td>
                </tr>
                <tr>
                    <th style="width:30%">Fecha de inicio</th>
                    <td>{% if contract.startDate %}{{ contract.startDate|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th style="width:30%">Fecha de expiraci&oacute;n</th>
                    <td>{% if contract.expirationDate %}{{ contract.expirationDate|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th style="width:30%">Objecto Contractual</th>
                    <td>{{ contract.contractualObject }}</td>
                </tr>
                <tr>
                    <th style="width:30%">Valor en cuc</th>
                    <td>{{ contract.cucValue }}</td>
                </tr>
                <tr>
                    <th style="width:30%">Valor en cup</th>
                    <td>{{ contract.cupValue }}</td>
                </tr>
                <tr>
                    <th style="width:30%">Tipo de contrato</th>
                    <td>{{ contract.type }}</td>
                </tr>
                <tr>
                    <th style="width:30%">No. acuerdo UASI</th>
                    <td>{{ contract.agreementNoUASI }}</td>
                </tr>
                <tr>
                    <th style="width:30%">No. acuerdo cubanacan</th>
                    <td>{{ contract.agreementNoCUBANACAN }}</td>
                </tr>
                <tr>
                    <th style="width:30%">Introducido por:</th>
                    <td>{{ contract.user }}</td>
                </tr>
            </tbody>
            <tfoot>
            <tr>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary" href="{{ path('contract_edit',{ 'id' : contract.id }) }}">Editar</a>
                        <a class="btn btn-danger link-eliminar"
                           description="{{ contract.contractNumber }} con el proveedor: {{ contract.suplier }}"
                           data-url="{{ path('contract_delete',{ 'id':contract.id }) }}"
                           data-toggle="modal"
                           data-target="#modal_delete"
                           data-placement="top">Eliminar</a>
                    {% endif %}
                    <a class="btn btn-default" href="{{ path('contract_index') }}">Volver al listado</a>
                </td>
            </tr>
            </tfoot>

        </table>

    </div>
    {{ include('layouts/include/modals.html.twig') }}
{% endblock %}
